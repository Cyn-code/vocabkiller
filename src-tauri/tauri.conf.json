{
  "$schema": "https://tauri.app/schema/tauri.config.json",
  "package": { "productName": "PopFS", "version": "0.1.0" },
  "build": {
    "beforeDevCommand": "PORT=3000 BROWSER=none npm start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "tauri": {
    "allowlist": { "shell": { "all": false } },
    "bundle": {
      "identifier": "com.vocabkiller.popfs",
      "active": true,
      "targets": "all",
      "icon": [
        "icons/PopFS icon.png",
        "icons/PopFS icon.ico",
        "icons/icon.ico"
      ],
      "macOS": { "minimumSystemVersion": "10.13" }
    },
    "windows": []
  },
  "plugins": {
    "deep-link": { "schemes": ["vocabkiller"] }
  }
}

